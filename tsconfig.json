{
    "compilerOptions": {
      "emitDeclarationOnly": true,
      "target": "esnext",
       "lib": ["ESNext","dom"],        
      "module": "esnext", 
      "rootDir": "src",  
      "moduleResolution": "node",
      "declaration": true, 
      "declarationMap": false,
      "outDir": "dist",
      "esModuleInterop": true,       
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src"]
}